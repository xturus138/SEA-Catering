<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.walkthrough.PageThirdFragment">

    <TextView
        android:id="@+id/textSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="40dp"
        android:text="Skip"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textColor="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieThird"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="100dp"
        app:lottie_rawRes="@raw/page3"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="102dp"
        android:text="@string/title_page_third"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/lottieThird"
        app:layout_constraintStart_toStartOf="@id/lottieThird"
        app:layout_constraintEnd_toEndOf="@id/lottieThird" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/sub_page_third"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/titleFirst"
        app:layout_constraintStart_toStartOf="@id/titleFirst"
        app:layout_constraintEnd_toEndOf="@id/titleFirst" />


</androidx.constraintlayout.widget.ConstraintLayout>
